header#header
  .navbar.navbar-fixed-top(role='navigation')
    .navbar-inner
      .container
        a.brand(href='/') Gitfly
        .nav-collapse.collapse
          ul.nav.pull-right
            if (req.isAuthenticated())
              li
                a.avatar(href="/users/"+req.user.username, title=req.user.username + "'s profile")
                  img(src=req.user.github.avatar_url, alt=req.user.username + "'s profile", width="20", height="20")
              li
                a(href="/logout", title="logout") Logout
            else
              li
                a(href="/auth/github", title="Signup with Github") Signup with Github
